	<flow name="ImplementationFlow" doc:id="110be77e-5cac-4b69-9218-6d7993a43ec6" >
		<ee:transform doc:name="Transform Message" doc:id="2f06792d-c837-4cb7-9362-4709c9f7c11b" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<db:select doc:name="Select" doc:id="a8c4a549-00e6-405f-a47f-6b7a54497b89" config-ref="Database_Config">
			<db:sql ><![CDATA[select * from customer where emailID = :emailID

]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
'emailID' : attributes.queryparams."emailId"
}]]]></db:input-parameters>
		</db:select>
		<choice doc:name="Choice" doc:id="9c8af25a-234a-4d4b-8ee6-f3cf8ee7285d" >
			<when expression="#[sizeOf(payload) == 0]">
				<raise-error doc:name="Raise error" doc:id="7a8598d5-ea53-4760-8442-41e0dfb37f74" type="ACCOUNT:NOT_FOUND" description="Customer not found with the provided email ID"/>
				<logger level="INFO" doc:name="Logger" doc:id="4b22e02d-1bd4-4d69-935e-f718cec1af14" message="No Customer found with the given email ID"/>
			</when>
			<otherwise >
				<ee:transform doc:name="Transform Message" doc:id="21b5656b-55f4-4f14-85b6-cb08de43e0be">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
			</otherwise>
		</choice>
		<logger level="INFO" doc:name="Logger" doc:id="53e9f200-a886-4927-a94c-511452031e76" message="#[payload]" />
		<error-handler name="ErrorHandlingError_Handler" doc:id="08f9c2d1-7844-43b5-90ea-eea22608c281">
			<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="88e63653-038a-41ab-bcdc-31b60a126935" when="sizeOf(payload == 0)" type="ANY">
				<logger level="INFO" doc:name="Logger" doc:id="6496a5b1-afb8-46d6-8eed-2f7be03f4961" message="No customer present with the provided email address"/>
			</on-error-propagate>
		</error-handler>
	</flow>
</mule>
